{
  "extends": "config-tsconfig/tsconfig.base.json",

  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      ".": ["."],
      "@public/*": ["../public/*"],
      "@modules/*": ["modules/*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": [".", ".eslintrc.js", ".storybook/**/*", "../../packages/config-mui/mui-theme.d.ts"],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo",
    "coverage",
    "dist",
    "compiled",
    "build-next-static",
    "build-storybook-static"
  ]
}
